<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans SYSTEM "Spring-beanDTD.dtd" >
<beans>
<bean id="emp1" class="com.demo.bean.Employee">
	<property name="empno" value="111"></property>
	<property name="name" value="ABC"></property>
</bean>

<bean id="mgr1" class="com.demo.bean.Manager">
	<constructor-arg index="0" value="112"></constructor-arg>
	<constructor-arg index="1" value="PQR"></constructor-arg>
	<constructor-arg index="2" value="5000"></constructor-arg>
	</bean>

<bean id="mgr2" class="com.demo.bean.Manager" parent="emp1">
	<property name="incentive" value="6000"></property>
	</bean>
	
	<bean id="dev1" class="com.demo.bean.Developer" parent="emp1">
	<property name="NumberOfProjects" value="10"></property>
	</bean>
</beans>
